# Define Building
BRANCH=mt6768

DEVICE_NAME=lancelot

# Build Flags
ARCH=arm64
CC=clang
DEPMOD=depmod
LLVM=1
LLVM_IAS=1
LD=ld.lld

# Compiler
BUILDTOOLS_PREBUILT_BIN=build/build-tools/path/linux-x86
CLANG_PREBUILT_BIN=prebuilts-master/clang/host/linux-x86/clang-r510928/bin
LINUX_GCC_CROSS_COMPILE_PREBUILTS_BIN=prebuilts-master/gcc/linux-x86/aarch64/aarch64-linux-android-4.9/bin
LINUX_GCC_CROSS_COMPILE_ARM32_PREBUILTS_BIN=prebuilts-master/gcc/linux-x86/arm/arm-linux-androideabi-4.9/bin
LD_LIBRARY_PATH=prebuilts-master/clang/host/linux-x86/clang-r510928/lib64:$$LD_LIBRARY_PATH
CROSS_COMPILE=aarch64-linux-android-4.9-
CROSS_COMPILE_ARM32=arm-linux-androideabi-4.9-
CLANG_TRIPLE=aarch64-linux-gnu-

# Define Defconfig
DEFCONFIG=lancelot_defconfig
KERNEL_DIR=kernel/xiaomi/mt6768

# Artifacts to be copied over for the prebuilt repo.
FILES="
arch/arm64/boot/Image
arch/arm64/boot/Image.gz
arch/arm64/boot/dtbo.img
arch/arm64/boot/dts/mediatek/mt6768.dtb
arch/arm64/boot/dts/mediatek/lancelot.dtb
vmlinux
System.map
"

# Extras
STOP_SHIP_TRACEPRINTK=1
IN_KERNEL_MODULES=1
DO_NOT_STRIP_MODULES=1
SKIP_MRPROPER=1